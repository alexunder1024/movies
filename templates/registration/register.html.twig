{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="bg-gray-100 h-screen antialiased leading-none font-sans flex items-center justify-center">
        <div class="bg-white p-8 rounded shadow-md max-w-md w-full mx-auto mt-20">
            <h2 class="text-2xl font-bold mb-4">Registration Form</h2>
            <form method="post">
                {{ form_start(registrationForm) }}
                <div class="mb-4">
                    <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email:</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500', 'placeholder': 'Ваш Email', 'required': 'required'}}) }}
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password:</label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'type': 'password', 'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500', 'placeholder': 'Ваш пароль', 'required': 'required'}}) }}
                </div>
                <div class="mb-4">
                    <label for="agree_terms" class="flex items-center">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        <span class="ml-2 text-gray-700">Agree to Terms</span>
                    </label>
                </div>
                <button type="submit" class="w-full bg-blue-500 text-white p-3 rounded-md hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue">
                    Register
                </button>
                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
    <div class="flex-1"></div>
{% endblock %}
