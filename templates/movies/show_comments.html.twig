{% for comment in comments %}
    <div class="mb-4" id="{{ comment.id }}">
        <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">{{ comment.email }}</span>
            {% if app.user %}
                <div class="flex space-x-2">
                    {% if (comment.isEditable) or (is_granted('ROLE_ADMIN')) %}
                        <button class="text-blue-500 edit-comment-btn">Редагувати</button><button class="text-red-500 delete-comment-btn">Видалити</button>
                    {% endif %}
                </div>
            {% endif %}
        </div>
        <p class="text-gray-700">{{ comment.text }}</p>
    </div>
    <hr>
{% endfor %}